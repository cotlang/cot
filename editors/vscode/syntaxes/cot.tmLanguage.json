{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Cot",
  "scopeName": "source.cot",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#characters" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#builtins" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.cot",
          "match": "//.*$"
        },
        {
          "name": "comment.block.cot",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.cot",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.cot",
              "match": "\\\\[\\\\\"nrt0]"
            },
            {
              "name": "meta.interpolation.cot",
              "begin": "\\$\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.definition.interpolation.begin.cot" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.definition.interpolation.end.cot" }
              },
              "patterns": [
                { "include": "source.cot" }
              ]
            }
          ]
        }
      ]
    },
    "characters": {
      "patterns": [
        {
          "name": "string.quoted.single.cot",
          "match": "'(?:[^'\\\\]|\\\\[\\\\nrt'0])'",
          "captures": {
            "0": { "name": "string.quoted.single.cot" }
          }
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.cot",
          "match": "\\b0[xX][0-9a-fA-F][0-9a-fA-F_]*\\b"
        },
        {
          "name": "constant.numeric.binary.cot",
          "match": "\\b0[bB][01][01_]*\\b"
        },
        {
          "name": "constant.numeric.octal.cot",
          "match": "\\b0[oO][0-7][0-7_]*\\b"
        },
        {
          "name": "constant.numeric.float.cot",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*(?:[eE][+-]?[0-9][0-9_]*)?\\b"
        },
        {
          "name": "constant.numeric.float.cot",
          "match": "\\b[0-9][0-9_]*[eE][+-]?[0-9][0-9_]*\\b"
        },
        {
          "name": "constant.numeric.integer.cot",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.cot",
          "match": "\\b(fn|struct|enum|union|trait|impl|type|extern|test)\\b"
        },
        {
          "name": "keyword.control.cot",
          "match": "\\b(if|else|switch|while|for|in|return|break|continue|defer|where)\\b"
        },
        {
          "name": "keyword.storage.cot",
          "match": "\\b(var|let|const)\\b"
        },
        {
          "name": "keyword.operator.cot",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "keyword.other.cot",
          "match": "\\b(new|try|catch|error|import)\\b"
        },
        {
          "name": "constant.language.cot",
          "match": "\\b(true|false|null|undefined)\\b"
        },
        {
          "name": "variable.language.cot",
          "match": "\\b(self|Self)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.cot",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|int|float|bool|void|string|byte)\\b"
        },
        {
          "name": "entity.name.type.cot",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.cot",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "comment": "Function declaration name",
          "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.cot" },
            "2": { "name": "entity.name.function.cot" }
          }
        },
        {
          "comment": "Function call",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.call.cot" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.cot",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.compound.cot",
          "match": "\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^="
        },
        {
          "name": "keyword.operator.assignment.cot",
          "match": "="
        },
        {
          "name": "keyword.operator.arrow.cot",
          "match": "->|=>"
        },
        {
          "name": "keyword.operator.range.cot",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.optional.cot",
          "match": "\\?\\?|\\?\\."
        },
        {
          "name": "keyword.operator.logical.cot",
          "match": "&&|\\|\\|"
        },
        {
          "name": "keyword.operator.bitwise.cot",
          "match": "<<|>>|&|\\||\\^|~"
        },
        {
          "name": "keyword.operator.arithmetic.cot",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.misc.cot",
          "match": "!"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.cot",
          "match": "[,;:]"
        }
      ]
    }
  }
}
