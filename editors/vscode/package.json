{
  "name": "cot-lang",
  "displayName": "Cot",
  "description": "Cot language support: syntax highlighting, diagnostics, hover, go-to-definition",
  "version": "0.1.0",
  "publisher": "cot-lang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cot-land/cot",
    "directory": "editors/vscode"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:cot"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "cot",
        "aliases": [
          "Cot",
          "cot"
        ],
        "extensions": [
          ".cot"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cot",
        "scopeName": "source.cot",
        "path": "./syntaxes/cot.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Cot",
      "properties": {
        "cot.lsp.path": {
          "type": "string",
          "default": "cot",
          "description": "Path to the cot executable"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  }
}
