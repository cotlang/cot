// Skipped: 015,016 (global mutation in test format)

// === Struct definitions ===

struct TyPoint { x: i64, y: i64 }
struct TyPair { a: i64, b: i64 }
struct TyInner { val: i64 }
struct TyOuter { inner: TyInner, extra: i64 }
struct TyTriple { a: i64, b: i64, c: i64 }
struct TyQuad { a: i64, b: i64, c: i64, d: i64 }
struct TyData5 { a: i64, b: i64, c: i64, d: i64, e: i64 }
struct TyVec2 { x: i64, y: i64 }
struct TyVec3 { x: i64, y: i64, z: i64 }
struct TyRect { x: i64, y: i64, w: i64, h: i64 }
struct TyLine { start: TyPoint, end: TyPoint }
struct TyDataAB { a: i64, b: i64 }

const MAGIC: i64 = 42;
const WIDTH: i64 = 80;
const HEIGHT: i64 = 25;
const AREA: i64 = 2000;

// === Helper functions ===

fn ty01_test_locals() i64 {
    var a: i64 = 10;
    var b: i64 = 20;
    var c: i64 = a + b;
    return c;
}

fn ty02_test_reassign() i64 {
    var x: i64 = 5;
    x = x + 10;
    x = x * 2;
    return x;
}

fn ty03_to_bool(x: i64) i64 {
    if x != 0 { return 1; }
    return 0;
}

fn ty06_sum_pair(p: *TyPair) i64 { return p.a + p.b; }
fn ty08_set_value(ptr: *i64, val: i64) void { ptr.* = val; }
fn ty11_make_pair(a: i64, b: i64, out: *TyPair) void { out.a = a; out.b = b; }
fn ty18_get_value(p: *TyDataAB) i64 { return p.a; }
fn ty18_set_value(p: *TyDataAB, v: i64) void { p.a = v; }
fn ty20_make_vec(x: i64, y: i64, out: *TyVec2) void { out.x = x; out.y = y; }
fn ty23_add_points(a: *TyPoint, b: *TyPoint, out: *TyPoint) void { out.x = a.x + b.x; out.y = a.y + b.y; }
fn ty27_distance_sq(p: *TyPoint) i64 { return p.x * p.x + p.y * p.y; }
fn ty28_translate(p: *TyPoint, dx: i64, dy: i64) void { p.x = p.x + dx; p.y = p.y + dy; }
fn ty30_area(r: *TyRect) i64 { return r.w * r.h; }
fn ty37_copy_point(src: *TyPoint, dst: *TyPoint) void { dst.x = src.x; dst.y = src.y; }
fn ty38_points_equal(a: *TyPoint, b: *TyPoint) i64 {
    if a.x == b.x and a.y == b.y { return 1; }
    return 0;
}
fn ty41_sum_triple(t: *TyTriple) i64 { return t.a + t.b + t.c; }
fn ty44_make_pair2(a: i64, b: i64, p: *TyPair) void { p.a = a; p.b = b; }

// === Tests ===

test "001: local variables" {
    @assert_eq(ty01_test_locals(), 30)
}

test "ty002: var reassignment" {
    @assert_eq(ty02_test_reassign(), 30)
}

test "003: bool conversion" {
    @assert_eq(ty03_to_bool(42), 1)
}

test "004: const value" {
    @assert_eq(MAGIC, 42)
}

test "005: struct basic" {
    var p: TyPoint = undefined;
    p.x = 10;
    p.y = 20;
    @assert_eq(p.x + p.y, 30)
}

test "006: struct pass" {
    var p: TyPair = undefined;
    p.a = 5;
    p.b = 7;
    @assert_eq(ty06_sum_pair(&p), 12)
}

test "007: nested struct" {
    var o: TyOuter = undefined;
    o.inner.val = 100;
    o.extra = 5;
    @assert_eq(o.inner.val + o.extra, 105)
}

test "008: ptr deref" {
    var x: i64 = 0;
    ty08_set_value(&x, 42);
    @assert_eq(x, 42)
}

test "011: struct out param" {
    var p: TyPair = undefined;
    ty11_make_pair(10, 20, &p);
    @assert_eq(p.a + p.b, 30)
}

test "013: nested struct fields" {
    var r: TyLine = undefined;
    r.start.x = 10;
    r.start.y = 20;
    r.end.x = 100;
    r.end.y = 50;
    @assert_eq(r.start.x + r.end.x, 110)
}

test "014: five field struct" {
    var d: TyData5 = undefined;
    d.a = 1;
    d.b = 2;
    d.c = 3;
    d.d = 4;
    d.e = 5;
    @assert_eq(d.a + d.b + d.c + d.d + d.e, 15)
}

test "017: const expressions" {
    @assert_eq(WIDTH * HEIGHT, AREA)
}

test "018: ptr to struct" {
    var d: TyDataAB = undefined;
    ty18_set_value(&d, 42);
    @assert_eq(ty18_get_value(&d), 42)
}

test "020: struct init pattern" {
    var v: TyVec2 = undefined;
    ty20_make_vec(3, 4, &v);
    var len_sq: i64 = v.x * v.x + v.y * v.y;
    @assert_eq(len_sq, 25)
}

test "021: three field struct" {
    var t: TyTriple = undefined;
    t.a = 1;
    t.b = 2;
    t.c = 3;
    @assert_eq(t.a + t.b + t.c, 6)
}

test "022: four field struct" {
    var q: TyQuad = undefined;
    q.a = 1;
    q.b = 2;
    q.c = 3;
    q.d = 4;
    @assert_eq(q.a * q.b * q.c * q.d, 24)
}

test "023: add two points" {
    var p1: TyPoint = undefined;
    var p2: TyPoint = undefined;
    var p3: TyPoint = undefined;
    p1.x = 1;
    p1.y = 2;
    p2.x = 3;
    p2.y = 4;
    ty23_add_points(&p1, &p2, &p3);
    @assert_eq(p3.x + p3.y, 10)
}

test "024: struct field sum" {
    var p: TyPoint = undefined;
    p.x = 10;
    p.y = 20;
    @assert_eq(p.x + p.y, 30)
}

test "025: struct ptr access" {
    var p: TyPoint = undefined;
    p.x = 5;
    p.y = 10;
    var ptr: *TyPoint = &p;
    @assert_eq(ptr.x, 5)
    @assert_eq(ptr.y, 10)
}

test "026: modify via ptr" {
    var p: TyPoint = undefined;
    p.x = 1;
    p.y = 2;
    var ptr: *TyPoint = &p;
    ptr.x = 100;
    ptr.y = 200;
    @assert_eq(p.x, 100)
    @assert_eq(p.y, 200)
}

test "027: distance squared" {
    var p: TyPoint = undefined;
    p.x = 3;
    p.y = 4;
    @assert_eq(ty27_distance_sq(&p), 25)
}

