struct Iter { pos: i64, limit: i64 }

impl Iter {
    fn next(self: *Iter) ?i64 {
        if (self.pos >= self.limit) {
            return null
        }
        var val = self.pos
        self.pos = self.pos + 1
        return val
    }
}

