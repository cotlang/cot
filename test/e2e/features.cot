// ============================================================================

fn get_slice_len(items: []i64) i64 {
    return items.len
}

fn slice_sum(items: []i64) i64 {
    var total: i64 = 0
    var i: i64 = 0
    while (i < items.len) {
        total = total + items[i]
        i = i + 1
    }
    return total
}

test "slice_param_basic" {
