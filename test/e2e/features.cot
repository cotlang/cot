// Tests: Baseline
// ============================================================================

test "baseline" {
    // Constants
    @assert_eq(42, 42)
    @assert_eq(10 + 5, 15)
    @assert_eq(20 - 8, 12)
    @assert_eq(6 * 7, 42)
    @assert_eq(2 + 3 * 4, 14)

    // Variables
    var x = 10
    var y = 5
    @assert_eq(x + y, 15)

    // If/else
    if (10 > 5) {
        var ok = 1
        @assert_eq(ok, 1)
    } else {
        @assert(1 == 0)
    }

    // While loop
    var sum: i64 = 0
    var i: i64 = 1
    while (i <= 10) {
        sum = sum + i
        i = i + 1
    }
    @assert_eq(sum, 55)
}

// ============================================================================
// Tests: Phase 3 language features
// ============================================================================

test "phase3" {
    // Char literals
    var c1 = 'A'
    @assert_eq(c1, 65)
    var c2 = '\n'
    @assert_eq(c2, 10)

    // Type alias + struct
    var coord: Coord = Coord { .x = 10, .y = 20 }
    @assert_eq(coord.x + coord.y, 30)

    // Builtins
    @assert_eq(@sizeOf(i64), 8)
    @assert_eq(@sizeOf(Point), 16)
    @assert_eq(@alignOf(i64), 8)
    var big: i64 = 42
    var small = @intCast(i32, big)
    @assert_eq(small, 42)

    // Enums
    var color: i64 = Color.Green
    @assert_eq(color, 1)
    var status: i64 = Status.Error
    @assert_eq(status, 100)

    // Union
    var state: i64 = State.Running
    @assert_eq(state, 1)

    // Bitwise ops
    var a = 255
    var b = 15
    @assert_eq(a & b, 15)
    @assert_eq((240 | 15) - 200, 55)
    @assert_eq((a ^ b) & 255, 240)
    @assert_eq((~0) & 255, 255)
    @assert_eq(1 << 4, 16)
    @assert_eq(64 >> 2, 16)

    // Compound assignment
    var x = 10
    x += 5
    @assert_eq(x, 15)
    x -= 3
    @assert_eq(x, 12)
    x *= 2
    @assert_eq(x, 24)
    var y = 255
    y &= 15
    @assert_eq(y, 15)

    // Optional types
    var opt1: ?i64 = 42
    @assert_eq(opt1.?, 42)
    var opt2: ?i64 = null
    @assert_eq(opt2 orelse 99, 99)
    var opt3: ?i64 = 42
    @assert_eq(opt3 orelse 99, 42)

    // Switch
    var sw1 = switch 2 {
        1 => 10,
        2 => 20,
        3 => 30,
        else => 0,
    }
    @assert_eq(sw1, 20)

    var level = Level.Medium
    var sw2 = switch level {
        Level.Low => 1,
        Level.Medium => 50,
        Level.High => 99,
        else => 0,
    }
    @assert_eq(sw2, 50)
}

