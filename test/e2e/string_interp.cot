test "simple variable" {
    var name = "world"
    var s = "Hello ${name}"
    @assertEq(s, "Hello world")
}

test "integer interpolation" {
    var x: i64 = 42
    var s = "x = ${x}"
    @assertEq(s, "x = 42")
}

test "expression" {
    var a: i64 = 3
    var b: i64 = 4
    var s = "sum = ${a + b}"
    @assertEq(s, "sum = 7")
}

test "multiple interpolations" {
    var a: i64 = 1
    var b: i64 = 2
    var s = "${a} + ${b}"
    @assertEq(s, "1 + 2")
}

test "adjacent expressions" {
    var x: i64 = 10
    var y: i64 = 20
    var s = "${x}${y}"
    @assertEq(s, "1020")
}

test "only expression" {
    var name = "hello"
    var s = "${name}"
    @assertEq(s, "hello")
}

test "negative integer" {
    var x: i64 = 0 - 5
    var s = "val=${x}"
    @assertEq(s, "val=-5")
}

test "zero" {
    var x: i64 = 0
    var s = "n=${x}"
    @assertEq(s, "n=0")
}

test "string concat in interp" {
    var a = "he"
    var b = "llo"
    var s = "say: ${a ++ b}"
    @assertEq(s, "say: hello")
}

test "empty text segments" {
    var x: i64 = 99
    var s = "${x}"
    @assertEq(s, "99")
}
