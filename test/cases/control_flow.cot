test "comparison eq" {
    @assert(42 == 42)
}

test "comparison ne" {
    @assert(42 != 43)
}

test "comparison lt" {
    @assert(5 < 10)
}

test "comparison gt" {
    @assert(10 > 5)
}

test "comparison le" {
    @assert(10 <= 10)
}

test "comparison ge" {
    @assert(10 >= 10)
}

test "if true" {
    var result: i64 = 0
    if 1 == 1 {
        result = 1
    }
    @assert_eq(result, 1)
}

test "if false" {
    var result: i64 = 0
    if 1 == 2 {
        result = 1
    }
    @assert_eq(result, 0)
}

test "if else" {
    var result: i64 = 0
    if 5 > 10 {
        result = 10
    } else {
        result = 20
    }
    @assert_eq(result, 20)
}

test "nested if" {
    var x: i64 = 15
    var result: i64 = 0
    if x > 10 {
        if x > 20 {
            result = 1
        } else {
            if x > 14 {
                result = 3
            } else {
                result = 2
            }
        }
    }
    @assert_eq(result, 3)
}

test "while simple" {
    var i: i64 = 0
    while i < 10 {
        i += 1
    }
    @assert_eq(i, 10)
}

test "while break" {
    var i: i64 = 0
    while i < 100 {
        if i == 5 {
            break
        }
        i += 1
    }
    @assert_eq(i, 5)
}

test "while continue" {
    var sum: i64 = 0
    var i: i64 = 0
    while i < 10 {
        i += 1
        if i % 2 != 0 {
            continue
        }
        sum += i
    }
    @assert_eq(sum, 30)
}

test "nested while" {
    var count: i64 = 0
    var i: i64 = 0
    while i < 3 {
        var j: i64 = 0
        while j < 2 {
            count += 1
            j += 1
        }
        i += 1
    }
    @assert_eq(count, 6)
}
