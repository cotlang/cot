test "array simple" {
    var arr = [42]
    @assert_eq(arr[0], 42)
}

test "sum two" {
    var arr = [1, 2]
    @assert_eq(arr[0] + arr[1], 3)
}

test "sum three" {
    var arr = [1, 2, 3]
    @assert_eq(arr[0] + arr[1] + arr[2], 6)
}

test "index access" {
    var arr = [10, 20, 30, 40]
    @assert_eq(arr[2], 30)
}

test "update" {
    var arr = [10, 20, 30]
    arr[1] = 100
    @assert_eq(arr[1], 100)
}

test "append one" {
    var arr = [1, 2, 3]
    var arr2 = append(arr, 4)
    @assert_eq(len(arr2), 4)
}
